---
import Button from "../components/Button.astro";
import "../styles/style.css";
---

<footer>
  <section class="grid_1-1">
    <a href="/"><h1><span id="outline">SWING</span>BY</h1></a>
    <div class="addresse">
      <p>SwingAPS</p>
      <p>Holtegade 8, 1. tv. KÃ¸benhavn N</p>
      <div class="knap">
        <a href="mailto:Letusconnect@swingapplication.com">
          <Button variant="getintouch_btn">Get in touch</Button>
        </a>
      </div>
    </div>
    <div class="app_knapper">
      <div class="appstore">
        <a
          href="https://apps.apple.com/us/app/swing/id6443537026"
          target="_blank"
          ><Button variant="black_btn">
            <img src="/imgs/appstore.svg" alt="" /> Download on the <br /> App Store</Button
          ></a
        >
      </div>
      <a
        href="https://play.google.com/store/apps/details?id=dk.swing.app&pli=1"
        target="_blank"
      >
        <Button variant="white_btn">
          <img src="/imgs/playstore.svg" alt="" /> Get it on <br />Google Play</Button
        >
      </a>
    </div>
  </section>
  <section class="grid_1-1_2">
    <a
      class="terms"
      href="https://app.websitepolicies.com/policies/view/opgjgs0k"
      target="_blank">Terms & Conditions</a
    >
    <a
      class="privacy"
      href="https://app.websitepolicies.com/policies/view/bdm82sg9"
      target="_blank"
      >Privacy policy
    </a>
  </section>
</footer>

<style>
  footer {
    background-color: #2c2b2a;
    color: white;
    font-family: degular;
    font-weight: 600;
    font-size: 25px;
    padding: 1rem;
  }
  h1 {
    font-family: degular-display;
    font-size: 70px;
    font-style: italic;
    margin-bottom: 2rem;
  }

  #outline {
    transition: 0.3s;
  }
  #outline:hover {
    transition: 0.3s;
    color: transparent;
    -webkit-text-stroke: 1px white;
  }

  .grid_1-1 {
    display: grid;
  }
  .grid_1-1_2 {
    display: grid;
    text-align: center;
  }
  a {
    color: white;
    text-decoration: none;
  }
  .addresse {
    grid-column: 1 / 2;
    line-height: 3rem;
  }

  .appstore {
    margin-bottom: 1rem;
  }

  .knap {
    margin-top: 1rem;
    margin-bottom: 2rem;
  }

  .terms {
    grid-column: 1 / 2;
    font-size: 16px;
  }

  .privacy {
    grid-column: 2 / 3;
        font-size: 16px;
  }

  @media screen and (min-width: 800px) {
    footer {
      background-color: #2c2b2a;
      color: white;
      font-family: degular;
      font-weight: 600;
      font-size: 25px;
      padding: 1rem;
    }
    h1 {
      font-family: degular;
      font-size: 70px;
      letter-spacing: -3px;
    }

    #outline {
      transition: 0.3s;
    }
    #outline:hover {
      transition: 0.3s;
      color: transparent;
      -webkit-text-stroke: 1px white;
    }

    .grid_1-1 {
      display: grid;
      margin: 0 5rem;
    }
    .grid_1-1_2 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      text-align: center;
    }
    a {
      grid-column: 1 / 2;
      color: white;
      text-decoration: none;
    }
    .addresse {
      grid-column: 1 / 2;
      line-height: 3rem;
    }

    .app_knapper {
      justify-content: flex-end;
      display: flex;
      flex-direction: row;
      gap: 10px;
    }

    .knap {
      margin-top: 1rem;
    }

    .terms {
      grid-column: 1 / 2;
    }

    .privacy {
      grid-column: 2 / 3;
    }
  }
</style>
